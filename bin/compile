#!/usr/bin/env bash

# Fail fast and fail hard
set -eo pipefail

# Syntax sugar
title() {
    echo "-----> $*"
}

indent() {
    sed "s/^/-----> /"
}

# initlialize
title "initlialize"
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1 # /tmp/build_#HASH#
INSTALL_DIR=$HOME/.vendor
mkdir -p $INSTALL_DIR
CACHE_DIR=$2 #/app/tmp/cache
PROFILE_DIR=$BUILD_DIR/.profile.d
mkdir -p $PROFILE_DIR

# Build buildpacks
title "build step by step"
. $BIN_DIR/steps/compile-mecab     $BUILD_DIR $INSTALL_DIR $CACHE_DIR $PROFILE_DIR # mecab buildpack
. $BIN_DIR/steps/compile-tesseract $BUILD_DIR $INSTALL_DIR $CACHE_DIR $PROFILE_DIR # tesseract buildpack

# Store buildpacks
(cd $HOME && tar cf - .vendor) | (cd $BUILD_DIR && tar xf -)

title "+focus buildpack finished"
#!/bin/sh

# ユーティリティ タイトル表示
title() {
    echo "-----> $*"
}

# ユーティリティ サブタイトル表示
subtitle() {
    echo "       $*"
}

echo "-------------------- current"
pwd
ls -la
echo "-------------------- /"
cd /
pwd
ls -la
echo "-------------------- $HOME"
cd $HOME
pwd
ls -la
echo "--------------------　BUILD_DIR"
cd $BUILD_DIR
pwd
ls -la
echo "--------------------"
#exit 0


BUILD_DIR=$1
APP_DIR=$BUILD_DIR/lib
LIB_DIR="lib"

echo "--------------------　BUILD_DIR/lib"
cd $APP_DIR
pwd
ls -la
echo "--------------------"
exit 0

CACHE_DIR=$2
VENDOR_DIR="vendor/lib"

title "initlialize"
subtitle "make CACHE_DIR/VENDOR_DIR"
mkdir -p $CACHE_DIR
cd $CACHE_DIR
mkdir -p $VENDOR_DIR
subtitle "make /BUILD_DIR/LIB_DIR"
mkdir -p $APP_DIR

# mecabのインストール
title "build mecab"
subtitle "get tarball"
curl -s -L http://nethive.info/lib_dev/mecab-0.996.tar.gz > $CACHE_DIR/$VENDOR_DIR/mecab-0.996.tar.gz
subtitle "unzip"
cd $CACHE_DIR/$VENDOR_DIR/
tar zxf mecab-0.996.tar.gz
subtitle "configure"
cd ./mecab-0.996
#./configure
./configure --prefix=$APP_DIR/mecab-0.996 --sysconfdir=$APP_DIR/mecab-0.996/etc
subtitle "make"
make -s
subtitle "install"
make install
cd ../../
subtitle "done"

# ipadicのインストール
title "build ipadic"
subtitle "get tarball"
curl -s -L http://nethive.info/lib_dev/mecab-ipadic-2.7.0-20070801.tar.gz > $CACHE_DIR/$VENDOR_DIR/mecab-ipadic-2.7.0-20070801.tar.gz
subtitle "unzip"
cd $CACHE_DIR/$VENDOR_DIR/ 
tar zxf mecab-ipadic-2.7.0-20070801.tar.gz
subtitle "configure"
cd ./mecab-ipadic-2.7.0-20070801
#./configure
./configure --prefix=$APP_DIR/mecab-ipadic-2.7.0-20070801 --with-charset=utf8 --with-dicdir=$APP_DIR/mecab-ipadic-2.7.0-20070801/lib/mecab/dic/ipadic --with-mecab-config=$APP_DIR/mecab-0.996/bin/mecab-config
subtitle "make"
make -s
subtitle "install"
make install
cd ../../
subtitle "done"

title "tune mecab dictionary path"
cd $APP_DIR/mecab-0.996/etc/
subtitle "replace dicdir"
# 区切り文字を/にすると$変数内の/が解決できなくなるため|を利用
sed -e "s|^dicdir.*|dicdir = $APP_DIR/mecab-ipadic-2.7.0-20070801/lib/mecab/dic/ipadic|" mecabrc
cd $HOME

subtitle "------------"
ls -la /app/lib/mecab-0.996/bin
subtitle "------------"
ls -la /app/lib/mecab-ipadic-2.7.0-20070801

title "set env path"
PROFILE_DIR=".profile.d"
echo 'export PATH="$PATH:/app/lib/mecab-0.996/bin"'>> $BUILD_DIR/$PROFILE_DIR/mecab.sh
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:/app/lib/mecab-0.996/lib"'>> $BUILD_DIR/$PROFILE_DIR/mecab.sh

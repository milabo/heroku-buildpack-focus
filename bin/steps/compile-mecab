#!/usr/bin/env bash

# Syntax sugar
mecab_indent () {
    echo "       [mecab] $*"
}

# Initialize
mecab_indent "initlialize"
BUILD_DIR=$1   # /tmp/build_#HASH#
LIB_DIR=$2     # $BIN_DIR/lib
INSTALL_DIR=$3 # /app/.vendor
CACHE_DIR=$4   # /app/tmp/cache
PROFILE_DIR=$5 # $BUILD_DIR/.profile.d

rm -rf $CACHE_DIR/mecab*

# Build mecab
mecab_indent "build mecab"
tar -zxf $LIB_DIR/mecab-0.996.tar.gz -C $CACHE_DIR
make --silent install | indent
#curl -s -L http://nethive.info/lib_dev/mecab-0.996.tar.gz | tar zx -C $CACHE_DIR
#ls -la $CACHE_DIR
#mecab_indent "-------------"
#ls -la $CACHE_DIR/mecab-0.996/
#cp -r $CACHE_DIR/mecab-0.996 $INSTALL_DIR/
#ls -la $INSTALL_DIR/mecab-0.996
#cd $CACHE_DIR/mecab-0.996
#./configure --silent --prefix=$INSTALL_DIR/mecab-0.996 --sysconfdir=$INSTALL_DIR/mecab-0.996/etc
#make --silent | indent
#make --silent install | indent

# Build ipadic
mecab_indent "build ipadic"
tar -zxf $LIB_DIR/mecab-ipadic-2.7.0-20070801.tar.gz -C $CACHE_DIR
make --silent install | indent
#curl -s -L http://nethive.info/lib_dev/mecab-ipadic-2.7.0-20070801.tar.gz | tar zx -C $CACHE_DIR
#cp -r $CACHE_DIR/mecab-ipadic-2.7.0-20070801 $INSTALL_DIR/
#cd $CACHE_DIR/mecab-ipadic-2.7.0-20070801
#./configure --silent --prefix=$INSTALL_DIR/mecab-ipadic-2.7.0-20070801 --with-charset=utf8 --with-dicdir=$INSTALL_DIR/mecab-ipadic-2.7.0-20070801/lib/mecab/dic/ipadic --with-mecab-config=$INSTALL_DIR/mecab-0.996/bin/mecab-config
#make --silent | indent
#make --silent install | indent

# Change mecab dictionary path
mecab_indent "change mecab dictionary path"
cd $INSTALL_DIR/mecab-0.996/etc/
echo "dicdir = $INSTALL_DIR/mecab-ipadic-2.7.0-20070801/lib/mecab/dic/ipadic" > mecabrc

# Set .profile.d script
mecab_indent "set env path"
echo 'export PATH="$PATH:$INSTALL_DIR/mecab-0.996/bin"' >> $PROFILE_DIR/mecab.sh
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$INSTALL_DIR/mecab-0.996/lib"' >> $PROFILE_DIR/mecab.sh
echo 'export MECABRC=$INSTALL_DIR/mecab-0.996/etc/mecabrc' >> $PROFILE_DIR/mecab.sh

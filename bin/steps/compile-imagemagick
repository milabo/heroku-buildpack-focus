#!/usr/bin/env bash

# Syntax sugar
imagemagick_indent () {
    echo "       [imagemagick] $*"
}

# Initialize
imagemagick_indent "initlialize"
BUILD_DIR=$1   # /tmp/build_#HASH#
LIB_DIR=$2     # $BIN_DIR/lib
INSTALL_DIR=$3 # /app/.vendor
CACHE_DIR=$4   # /app/tmp/cache
PROFILE_DIR=$5 # $BUILD_DIR/.profile.d

# Build imagemagick
imagemagick_indent "build imagemagick"
sudo curl -s -L http://www.imagemagick.org/download/releases/ImageMagick-7.0.3-5.tar.gz | sudo tar zx -C $CACHE_DIR
cd $CACHE_DIR/ImageMagick-7.0.3-5
./configure --silent --prefix=$INSTALL_DIR/ImageMagick-7.0.3-5
make --silent | indent
make --silent install | indent

# Set .profile.d script
# Please do not use locally $variables in buildpack when you set environment variables, 
# because .profile.d script runs after slug built, and this can not detect $variables.
imagemagick_indent "set env path"
echo 'export PATH="$PATH:/app/.vendor/ImageMagick-7.0.3-5/bin"' >> $PROFILE_DIR/imagemagick.sh
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:/app/.vendor/ImageMagick-7.0.3-5/lib"' >> $PROFILE_DIR/imagemagick.sh
echo 'export MAGICK_CONFIGURE_PATH=/app/.vendor/ImageMagick-7.0.3-5' >> $PROFILE_DIR/imagemagick.sh